<h3 style="text-align:center" class="text-center">Login</h3>
@* dùng style hay class đều dược, 1 trong 2 *@
<div class="form-group">
<label for="user name">username</label>
<input type="text" class="from-control" id="username" placeholder="Enter username" />
</div>
<div class="form-group">
<label for="password">password</label>
